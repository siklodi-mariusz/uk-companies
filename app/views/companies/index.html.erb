<%= form_with method: :get do |form| %>
  <%= form.label :q, "Search for companies:" %>
  <%= form.text_field :q, value: params[:q], required: true %>
  <%= form.submit "Search" %>
<% end %>


<section>
  <h1>Companies</h1>

  <ul>
    <% @companies.each do |company| %>
      <li><%= company['title'] %></li>
    <% end %>
  </ul>
</section>
